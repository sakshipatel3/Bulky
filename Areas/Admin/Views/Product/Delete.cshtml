@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Product</h2>
            <hr/>
        </div>
  
        <div class="mb-3 row p-1">
            <lable asp-for="Title" class="p-0"> </lable>
            <input asp-for="Title" disabled class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Description" class="p-0"> </lable>
            <input asp-for="Description" disabled class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="ISBN" class="p-0"> </lable>
            <input asp-for="ISBN" disabled class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Author" class="p-0"> </lable>
            <input asp-for="Author" disabled class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Price100" class="p-0"> </lable>
            <input asp-for="ListPrice" disabled class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Price" class="p-0"> </lable>
            <input asp-for="Price" disabled class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Price50" class="p-0"> </lable>
            <input asp-for="Price50" disabled class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Price100" class="p-0"> </lable>
            <input asp-for="Price100" disabled class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete </button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>


    </div>

</form>
